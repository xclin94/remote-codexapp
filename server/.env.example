# Bind
HOST=127.0.0.1
PORT=18888

# Auth/session
SESSION_SECRET=dev-only-change-me-please
SESSION_TTL_MS=86400000
STUCK_RUNNING_ABORT_MS=45000
DATA_DIR=data

# TOTP auth
TOTP_SECRET=
TOTP_ISSUER=Codex Remoteapp
TOTP_ACCOUNT=codex
PRINT_TOTP_QR=false
TOTP_PROVISION_FILE=.totp_provisioned

# OpenAI
# Note: codex CLI itself needs OPENAI_API_KEY in the environment (export it in your shell).
OPENAI_API_KEY=

# Codex CLI settings
CODEX_MODEL=gpt-5.3-codex
CODEX_REASONING_EFFORT=high
CODEX_CWD=/home/shuijx/workspace/codex_remoteapp
# Optional: comma-separated absolute paths allowed in the web CWD picker UI.
# Defaults to CODEX_CWD if unset.
CWD_ROOTS=$HOME/workspace
CODEX_SANDBOX=danger-full-access
CODEX_APPROVAL_POLICY=never

# Optional: external CLI status endpoint. Should return JSON; this endpoint reads
# both `rate_limits` and `usage` from the payload and exposes both in /api/status.
# If unset, the server now automatically falls back to:
# CODEX_CLI_STATUS_URL=http://127.0.0.1:18888/api/cli-status
CODEX_CLI_STATUS_URL=
